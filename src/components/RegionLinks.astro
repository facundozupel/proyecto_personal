---
import { Container } from './ui';

interface Props {
  currentSlug: string;
}

const { currentSlug } = Astro.props;

const zonas = [
  {
    zona: "Norte",
    ciudades: [
      { nombre: "Arica", slug: "arica", region: "Arica y Parinacota" },
      { nombre: "Iquique", slug: "iquique", region: "Tarapaca" },
      { nombre: "Antofagasta", slug: "antofagasta", region: "Antofagasta" },
      { nombre: "Copiapo", slug: "copiapo", region: "Atacama" },
      { nombre: "La Serena", slug: "la-serena", region: "Coquimbo" },
      { nombre: "Ovalle", slug: "ovalle", region: "Coquimbo" },
    ],
  },
  {
    zona: "Centro",
    ciudades: [
      { nombre: "Rancagua", slug: "rancagua", region: "O'Higgins" },
      { nombre: "Talca", slug: "talca", region: "Maule" },
      { nombre: "Chillan", slug: "chillan", region: "Nuble" },
    ],
  },
  {
    zona: "Sur",
    ciudades: [
      { nombre: "Temuco", slug: "temuco", region: "La Araucania" },
      { nombre: "Osorno", slug: "osorno", region: "Los Lagos" },
      { nombre: "Puerto Montt", slug: "puerto-montt", region: "Los Lagos" },
    ],
  },
  {
    zona: "Austral",
    ciudades: [
      { nombre: "Punta Arenas", slug: "punta-arenas", region: "Magallanes" },
    ],
  },
];

// Find the zone index of the current city
const currentZoneIndex = zonas.findIndex(z => z.ciudades.some(c => c.slug === currentSlug));

// Get cities from the same zone (excluding current)
const sameZone = currentZoneIndex >= 0
  ? zonas[currentZoneIndex].ciudades.filter(c => c.slug !== currentSlug)
  : [];

// Get cities from neighboring zones
const neighborIndices = [];
if (currentZoneIndex > 0) neighborIndices.push(currentZoneIndex - 1);
if (currentZoneIndex < zonas.length - 1) neighborIndices.push(currentZoneIndex + 1);

const neighborCities = neighborIndices.flatMap(i => zonas[i].ciudades);

// Build final list: same zone first, then neighbors to fill up to 5
const maxLinks = 5;
let selectedCities: typeof zonas[0]['ciudades'] = [];

if (currentZoneIndex >= 0) {
  // City found in a zone: show same zone + neighbors
  selectedCities = [...sameZone];
  if (selectedCities.length < maxLinks) {
    const remaining = maxLinks - selectedCities.length;
    selectedCities = [...selectedCities, ...neighborCities.slice(0, remaining)];
  }
} else {
  // Hub page (chile): pick one from each zone for variety
  selectedCities = zonas.flatMap(z => z.ciudades.slice(0, 2)).slice(0, maxLinks);
}
---

<section class="py-[80px] md:py-[100px]">
  <Container>
    <div class="max-w-4xl mx-auto">
      <h2 class="text-2xl md:text-3xl font-bold text-white mb-8">
        Consultoria SEO en otras ciudades de Chile
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {selectedCities.map((ciudad) => (
          <a
            href={`/consultor-seo-${ciudad.slug}`}
            class="card p-5 border border-white/[0.08] hover:border-white/[0.15] transition-all group block"
          >
            <div class="flex items-center justify-between">
              <div>
                <h3 class="font-semibold text-white group-hover:text-[#0070F3] transition-colors">
                  SEO en {ciudad.nombre}
                </h3>
                <span class="inline-block mt-1.5 text-xs font-medium uppercase tracking-[0.1em] text-white/40 bg-white/[0.05] px-2.5 py-0.5 rounded-full">
                  {ciudad.region}
                </span>
              </div>
              <span class="text-white/30 group-hover:text-[#0070F3] transition-colors flex-shrink-0 ml-3">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
              </span>
            </div>
          </a>
        ))}
      </div>
      <div class="mt-6 text-center">
        <a
          href="/consultor-seo-regiones"
          class="inline-flex items-center gap-2 text-[#0070F3] hover:text-[#3291FF] transition-colors font-medium"
        >
          Ver todas las ciudades
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </a>
      </div>
    </div>
  </Container>
</section>
