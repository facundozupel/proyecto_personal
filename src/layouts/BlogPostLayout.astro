---
import BaseLayout from './BaseLayout.astro';
import { Container } from '@/components/ui';
import { Header } from '@/components/layout/Header';
import { Footer } from '@/components/layout/Footer';
import { generateBlogPostSchemaTag } from '@/utils/schema';

interface Props {
  title: string;
  description: string;
  author?: string;
  date: Date;
  readTime?: string;
  tags?: string[];
  slug: string;
  image?: string;
}

const { title, description, author = 'Facundo Zupel', date, readTime, tags = [], slug, image } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(date);

const canonicalUrl = new URL(`/blog/${slug}`, Astro.site || 'http://localhost:4321').toString();

const schemaMarkup = generateBlogPostSchemaTag({
  headline: title,
  description: description,
  author: author,
  datePublished: date.toISOString().split('T')[0],
  url: canonicalUrl,
  slug: slug,
  tags: tags,
  image: image,
});
---

<BaseLayout title={`${title} | Facundo Zupel`} description={description}>
  <Fragment slot="head" set:html={schemaMarkup} />

  <Header slot="header" client:load />
  <Footer slot="footer" client:load />

  <article class="py-20 md:py-28 lg:py-32">
    <Container size="lg">
      <!-- Header del artículo -->
      <header class="max-w-4xl mx-auto mb-16 md:mb-20">
        <!-- Breadcrumb -->
        <nav class="mb-8" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-3 text-sm text-white/50">
            <li>
              <a href="/" class="hover:text-primary-400 transition-colors">Inicio</a>
            </li>
            <li aria-hidden="true" class="text-white/30">→</li>
            <li>
              <a href="/blog" class="hover:text-primary-400 transition-colors">Blog</a>
            </li>
            <li aria-hidden="true" class="text-white/30">→</li>
            <li class="text-white/70 font-medium truncate max-w-[200px] md:max-w-none" aria-current="page">
              {title}
            </li>
          </ol>
        </nav>

        <!-- Tags -->
        {
          tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-8">
              {tags.map((tag) => (
                <span class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium bg-primary-500/10 text-primary-400 rounded-full border border-primary-500/20 hover:bg-primary-500/20 transition-colors">
                  <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                  </svg>
                  {tag}
                </span>
              ))}
            </div>
          )
        }

        <!-- Título -->
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-white mb-8 leading-[1.1]">
          {title}
        </h1>

        <!-- Descripción -->
        <p class="text-xl md:text-2xl text-white/70 leading-relaxed mb-8">
          {description}
        </p>

        <!-- Divisor visual -->
        <div class="w-24 h-1 bg-gradient-to-r from-primary-500 to-accent-500 rounded-full mb-8"></div>

        <!-- Meta info -->
        <div class="flex flex-wrap items-center gap-6 text-white/60 text-sm">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-primary-500/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div>
              <span class="text-xs text-white/40 block">Autor</span>
              <span class="font-medium text-white">{author}</span>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <div class="w-10 h-10 rounded-xl bg-success-500/10 flex items-center justify-center">
              <svg class="w-5 h-5 text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <span class="text-xs text-white/40 block">Publicado</span>
              <time datetime={date.toISOString()} class="font-medium text-white">{formattedDate}</time>
            </div>
          </div>

          {
            readTime && (
              <div class="flex items-center gap-3">
                <div class="w-10 h-10 rounded-xl bg-accent-500/10 flex items-center justify-center">
                  <svg class="w-5 h-5 text-accent-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <span class="text-xs text-white/40 block">Lectura</span>
                  <span class="font-medium text-white">{readTime}</span>
                </div>
              </div>
            )
          }
        </div>
      </header>

      <!-- Contenido del artículo -->
      <div class="max-w-[840px] mx-auto">
        <div
          class="prose prose-lg prose-invert
          prose-headings:font-display prose-headings:font-bold prose-headings:text-white
          prose-h2:text-3xl prose-h2:md:text-4xl prose-h2:mt-16 prose-h2:mb-6
          prose-h3:text-2xl prose-h3:md:text-3xl prose-h3:mt-12 prose-h3:mb-5
          prose-h4:text-xl prose-h4:md:text-2xl prose-h4:mt-10 prose-h4:mb-4
          prose-p:text-white/70 prose-p:text-lg prose-p:leading-relaxed prose-p:mb-6
          prose-a:text-primary-400 prose-a:font-medium prose-a:no-underline prose-a:border-b-2 prose-a:border-primary-500/30 hover:prose-a:border-primary-400 prose-a:transition-colors
          prose-strong:text-white prose-strong:font-semibold
          prose-blockquote:border-l-4 prose-blockquote:border-primary-500 prose-blockquote:bg-white/[0.03] prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:rounded-r-xl prose-blockquote:not-italic prose-blockquote:text-white/70
          prose-ul:text-white/70 prose-ul:my-6
          prose-ol:text-white/70 prose-ol:my-6
          prose-li:text-lg prose-li:leading-relaxed prose-li:marker:text-primary-400
          prose-code:text-primary-300 prose-code:bg-primary-500/10 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:border prose-code:border-primary-500/20
          prose-pre:bg-[#0d1117] prose-pre:border prose-pre:border-white/10 prose-pre:rounded-xl
          prose-img:rounded-2xl prose-img:border prose-img:border-white/10 prose-img:my-10
          prose-hr:border-white/10 prose-hr:my-12
          prose-table:text-white/70
          prose-th:text-white prose-th:bg-white/[0.05] prose-th:border-white/10 prose-th:px-4 prose-th:py-3
          prose-td:border-white/10 prose-td:px-4 prose-td:py-3
          max-w-none"
        >
          <slot />
        </div>
      </div>

      <!-- Footer del artículo -->
      <footer class="max-w-4xl mx-auto mt-20 md:mt-28">
        <!-- Divisor -->
        <div class="flex items-center justify-center mb-12">
          <div class="h-px bg-gradient-to-r from-transparent via-white/20 to-transparent w-full max-w-md"></div>
        </div>

        <!-- Compartir -->
        <div class="mb-12 p-8 rounded-2xl border border-white/[0.08] bg-white/[0.02]">
          <div class="text-center mb-6">
            <h3 class="text-xl font-display font-bold text-white mb-2">
              Comparte este artículo
            </h3>
            <p class="text-white/60">
              Si te pareció útil, ayuda a otros compartiéndolo
            </p>
          </div>
          <div class="flex flex-wrap items-center justify-center gap-4">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-3 px-6 py-3 bg-[#1DA1F2]/20 text-[#1DA1F2] font-semibold rounded-xl hover:bg-[#1DA1F2]/30 transition-all border border-[#1DA1F2]/30"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
              </svg>
              Twitter
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-3 px-6 py-3 bg-[#0A66C2]/20 text-[#0A66C2] font-semibold rounded-xl hover:bg-[#0A66C2]/30 transition-all border border-[#0A66C2]/30"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
              </svg>
              LinkedIn
            </a>
            <button
              onclick="navigator.clipboard.writeText(window.location.href); alert('¡Enlace copiado!');"
              class="inline-flex items-center gap-3 px-6 py-3 bg-white/5 text-white/80 font-semibold rounded-xl hover:bg-white/10 transition-all border border-white/10"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
              </svg>
              Copiar enlace
            </button>
          </div>
        </div>

        <!-- CTA -->
        <div class="relative mb-12 p-10 rounded-2xl overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-primary-600 to-primary-700"></div>
          <div class="absolute inset-0 opacity-20">
            <div class="absolute top-0 left-0 w-40 h-40 bg-white rounded-full -translate-x-1/2 -translate-y-1/2"></div>
            <div class="absolute bottom-0 right-0 w-64 h-64 bg-white rounded-full translate-x-1/3 translate-y-1/3"></div>
          </div>

          <div class="relative z-10 text-center">
            <div class="inline-flex items-center justify-center w-14 h-14 bg-white/20 rounded-2xl mb-6">
              <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
            </div>
            <h3 class="text-2xl md:text-3xl font-display font-bold text-white mb-4">
              ¿Te gustó este contenido?
            </h3>
            <p class="text-lg text-white/80 max-w-xl mx-auto mb-8">
              Obtén más estrategias de crecimiento orgánico directamente
            </p>
            <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
              <a
                href="/#contacto"
                class="inline-flex items-center gap-2 px-8 py-4 bg-white text-primary-700 font-bold rounded-xl hover:bg-white/90 transition-all"
              >
                Contáctame
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
              <a
                href="/blog"
                class="inline-flex items-center gap-2 px-8 py-4 bg-white/10 text-white font-bold rounded-xl hover:bg-white/20 transition-all border border-white/20"
              >
                Ver más artículos
              </a>
            </div>
          </div>
        </div>

        <!-- Volver -->
        <div class="text-center pt-8 border-t border-white/[0.08]">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-white/60 hover:text-primary-400 font-medium transition-colors group"
          >
            <svg class="w-5 h-5 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
            </svg>
            Volver al blog
          </a>
        </div>
      </footer>
    </Container>
  </article>
</BaseLayout>
