---
import BaseLayout from './BaseLayout.astro';
import { Container } from '@/components/ui';
import { Header } from '@/components/layout/Header';
import { Footer } from '@/components/layout/Footer';
import { generateBlogPostSchemaTag } from '@/utils/schema';

interface Props {
  title: string;
  description: string;
  author?: string;
  date: Date;
  readTime?: string;
  tags?: string[];
  slug: string;
  image?: string;
}

const { title, description, author = 'Facundo Zupel', date, readTime, tags = [], slug, image } = Astro.props;

const formattedDate = new Intl.DateTimeFormat('es-ES', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
}).format(date);

const canonicalUrl = new URL(`/blog/${slug}`, Astro.site || 'http://localhost:4321').toString();

const schemaMarkup = generateBlogPostSchemaTag({
  headline: title,
  description: description,
  author: author,
  datePublished: date.toISOString().split('T')[0],
  url: canonicalUrl,
  slug: slug,
  tags: tags,
  image: image,
});
---

<BaseLayout title={`${title} | Facundo Zupel`} description={description}>
  <Fragment slot="head" set:html={schemaMarkup} />

  <Header slot="header" client:load />
  <Footer slot="footer" client:load />

  <article class="py-[120px] md:py-[160px]">
    <Container size="lg">
      <!-- Header del artículo -->
      <header class="max-w-4xl mx-auto mb-16 md:mb-20">
        <!-- Breadcrumb -->
        <nav class="mb-8" aria-label="Breadcrumb">
          <ol class="flex items-center space-x-3 text-sm text-white/40">
            <li>
              <a href="/" class="hover:text-white transition-colors duration-150">Inicio</a>
            </li>
            <li aria-hidden="true" class="text-white/20">/</li>
            <li>
              <a href="/blog" class="hover:text-white transition-colors duration-150">Blog</a>
            </li>
            <li aria-hidden="true" class="text-white/20">/</li>
            <li class="text-white/60 truncate max-w-[200px] md:max-w-none" aria-current="page">
              {title}
            </li>
          </ol>
        </nav>

        <!-- Tags -->
        {
          tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-8">
              {tags.map((tag) => (
                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium bg-white/[0.06] text-white/60 rounded-md border border-white/[0.08]">
                  {tag}
                </span>
              ))}
            </div>
          )
        }

        <!-- Título -->
        <h1 class="text-white mb-8">{title}</h1>

        <!-- Descripción -->
        <p class="text-xl md:text-2xl text-white/50 leading-relaxed mb-8">
          {description}
        </p>

        <!-- Divider -->
        <div class="w-16 h-px bg-white/[0.15] mb-8"></div>

        <!-- Meta info -->
        <div class="flex flex-wrap items-center gap-6 text-white/50 text-sm">
          <div class="flex items-center gap-3">
            <div class="w-9 h-9 rounded-lg bg-white/[0.06] flex items-center justify-center">
              <svg class="w-4 h-4 text-white/50" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div>
              <span class="text-xs text-white/30 block">Autor</span>
              <span class="font-medium text-white">{author}</span>
            </div>
          </div>

          <div class="flex items-center gap-3">
            <div class="w-9 h-9 rounded-lg bg-white/[0.06] flex items-center justify-center">
              <svg class="w-4 h-4 text-white/50" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div>
              <span class="text-xs text-white/30 block">Publicado</span>
              <time datetime={date.toISOString()} class="font-medium text-white">{formattedDate}</time>
            </div>
          </div>

          {
            readTime && (
              <div class="flex items-center gap-3">
                <div class="w-9 h-9 rounded-lg bg-white/[0.06] flex items-center justify-center">
                  <svg class="w-4 h-4 text-white/50" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <span class="text-xs text-white/30 block">Lectura</span>
                  <span class="font-medium text-white">{readTime}</span>
                </div>
              </div>
            )
          }
        </div>
      </header>

      <!-- Contenido del artículo -->
      <div class="max-w-[840px] mx-auto">
        <div
          class="prose prose-lg prose-invert
          prose-headings:font-bold prose-headings:text-white
          prose-h2:text-3xl prose-h2:md:text-4xl prose-h2:mt-16 prose-h2:mb-6
          prose-h3:text-2xl prose-h3:md:text-3xl prose-h3:mt-12 prose-h3:mb-5
          prose-h4:text-xl prose-h4:md:text-2xl prose-h4:mt-10 prose-h4:mb-4
          prose-p:text-white/70 prose-p:text-lg prose-p:leading-relaxed prose-p:mb-6
          prose-a:text-[#0070F3] prose-a:font-medium prose-a:no-underline prose-a:border-b prose-a:border-[#0070F3]/30 hover:prose-a:border-[#0070F3] prose-a:transition-colors
          prose-strong:text-white prose-strong:font-semibold
          prose-blockquote:border-l-2 prose-blockquote:border-white/20 prose-blockquote:bg-white/[0.03] prose-blockquote:py-4 prose-blockquote:px-6 prose-blockquote:rounded-r-xl prose-blockquote:not-italic prose-blockquote:text-white/60
          prose-ul:text-white/70 prose-ul:my-6
          prose-ol:text-white/70 prose-ol:my-6
          prose-li:text-lg prose-li:leading-relaxed prose-li:marker:text-white/30
          prose-code:text-[#3291FF] prose-code:bg-[#0070F3]/10 prose-code:px-2 prose-code:py-1 prose-code:rounded prose-code:text-sm prose-code:border prose-code:border-[#0070F3]/20
          prose-pre:bg-[#111] prose-pre:border prose-pre:border-white/[0.08] prose-pre:rounded-xl
          prose-img:rounded-xl prose-img:border prose-img:border-white/[0.08] prose-img:my-10
          prose-hr:border-white/[0.08] prose-hr:my-12
          prose-table:text-white/70
          prose-th:text-white prose-th:bg-white/[0.04] prose-th:border-white/[0.08] prose-th:px-4 prose-th:py-3
          prose-td:border-white/[0.08] prose-td:px-4 prose-td:py-3
          max-w-none"
        >
          <slot />
        </div>
      </div>

      <!-- Footer del artículo -->
      <footer class="max-w-4xl mx-auto mt-20 md:mt-28">
        <!-- Divisor -->
        <div class="h-px bg-white/[0.08] mb-12"></div>

        <!-- Compartir -->
        <div class="mb-12 card p-8">
          <div class="text-center mb-6">
            <h3 class="text-lg font-semibold text-white mb-2">
              Comparte este artículo
            </h3>
            <p class="text-white/50 text-sm">
              Si te pareció útil, ayuda a otros compartiéndolo
            </p>
          </div>
          <div class="flex flex-wrap items-center justify-center gap-3">
            <a
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(title)}&url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-5 py-2.5 border border-white/[0.08] text-white/70 font-medium rounded-lg hover:bg-white/[0.05] hover:border-white/[0.15] transition-all duration-200 text-sm"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
              </svg>
              Twitter
            </a>
            <a
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(Astro.url.href)}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 px-5 py-2.5 border border-white/[0.08] text-white/70 font-medium rounded-lg hover:bg-white/[0.05] hover:border-white/[0.15] transition-all duration-200 text-sm"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"></path>
              </svg>
              LinkedIn
            </a>
            <button
              onclick="navigator.clipboard.writeText(window.location.href); alert('¡Enlace copiado!');"
              class="inline-flex items-center gap-2 px-5 py-2.5 border border-white/[0.08] text-white/70 font-medium rounded-lg hover:bg-white/[0.05] hover:border-white/[0.15] transition-all duration-200 text-sm"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="1.5" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M8 5H6a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2v-1M8 5a2 2 0 002 2h2a2 2 0 002-2M8 5a2 2 0 012-2h2a2 2 0 012 2m0 0h2a2 2 0 012 2v3m2 4H10m0 0l3-3m-3 3l3 3" />
              </svg>
              Copiar enlace
            </button>
          </div>
        </div>

        <!-- CTA -->
        <div class="mb-12 card p-10 text-center">
          <h3 class="text-2xl md:text-3xl font-bold text-white mb-4">
            ¿Te gustó este contenido?
          </h3>
          <p class="text-lg text-white/50 max-w-xl mx-auto mb-8">
            Obtén más estrategias de crecimiento orgánico directamente
          </p>
          <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
            <a
              href="/#contacto"
              class="inline-flex items-center gap-2 px-8 py-3.5 bg-white text-black font-medium rounded-lg hover:bg-white/90 transition-all duration-200"
            >
              Contáctame
              <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a
              href="/blog"
              class="inline-flex items-center gap-2 px-8 py-3.5 border border-white/[0.2] text-white font-medium rounded-lg hover:bg-white/[0.05] hover:border-white/[0.3] transition-all duration-200"
            >
              Ver más artículos
            </a>
          </div>
        </div>

        <!-- Volver -->
        <div class="text-center pt-8 border-t border-white/[0.08]">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-white/50 hover:text-[#0070F3] font-medium transition-colors duration-150 group"
          >
            <svg class="w-4 h-4 transform group-hover:-translate-x-1 transition-transform duration-200" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7"></path>
            </svg>
            Volver al blog
          </a>
        </div>
      </footer>
    </Container>
  </article>
</BaseLayout>
