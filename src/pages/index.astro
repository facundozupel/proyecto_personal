---
export const prerender = true;
import BaseLayout from '../layouts/BaseLayout.astro';
import { Header } from '../components/layout/Header';
import { Footer } from '../components/layout/Footer';
import { Container } from '../components/ui';
import TrustBar from '../components/sections/TrustBar';
import PainPoints from '../components/sections/PainPoints';
import CaseStudyPreview from '../components/sections/CaseStudyPreview';
import Services from '../components/sections/Services';
import WhyMe from '../components/sections/WhyMe';
import WorkflowProcess from '../components/sections/WorkflowProcess';
import { ProfitabilityCalculator } from '../components/sections/ProfitabilityCalculator';
import FeaturedArticles from '../components/sections/FeaturedArticles';
import HomeFAQ from '../components/sections/HomeFAQ';
import InlineContactForm from '../components/sections/InlineContactForm';
---

<BaseLayout
  title="Facundo Zupel - Escalá tu negocio orgánicamente"
  description="Facundo Zupel, consultor SEO growth. Escalá tu negocio orgánicamente con SEO técnico, automatización con Python y estrategia data-driven. Caso Endado: +560K€ en orgánico."
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Facundo Zupel - Consultor SEO",
      "url": "https://facundogrowth.com",
      "logo": "https://facundogrowth.com/logo.png",
      "sameAs": [
        "https://www.linkedin.com/in/facundo-zupel-b7513916a/"
      ],
      "contactPoint": {
        "@type": "ContactPoint",
        "contactType": "customer service",
        "availableLanguage": "Spanish"
      }
    })} />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "Facundo Zupel",
      "jobTitle": "Consultor SEO",
      "url": "https://facundogrowth.com",
      "sameAs": [
        "https://www.linkedin.com/in/facundo-zupel-b7513916a/"
      ],
      "knowsAbout": [
        "SEO", "Posicionamiento Web", "SEO Técnico", "Google Analytics 4",
        "Google Search Console", "Python", "Automatización SEO",
        "SEO Ecommerce", "SEO Local", "Keyword Research"
      ],
      "worksFor": {
        "@type": "Organization",
        "name": "Facundo Zupel - Consultor SEO"
      }
    })} />
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": "Facundo Zupel - Consultor SEO Chile",
      "url": "https://facundogrowth.com",
      "description": "Consultoría SEO en Chile. Estrategia de posicionamiento web, SEO técnico, automatización y crecimiento orgánico para empresas y pymes.",
      "publisher": {
        "@type": "Person",
        "name": "Facundo Zupel"
      }
    })} />
  </Fragment>

  <Header slot="header" client:load />

  <!-- HERO -->
  <section id="inicio" class="min-h-screen flex items-center relative pt-16 overflow-hidden">
    <!-- Background atmosphere -->
    <div class="absolute inset-0 pointer-events-none" aria-hidden="true">
      <div class="absolute top-1/3 left-1/4 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[400px] bg-[#0070F3]/[0.05] rounded-full blur-[120px]"></div>
    </div>

    <Container>
      <div class="max-w-5xl py-[120px] md:py-[160px] relative z-10">
        <!-- Eyebrow -->
        <div class="hero-animate-1 inline-flex items-center gap-2 px-4 py-1.5 rounded bg-white/[0.06] border border-white/[0.08] mb-8 hero-eyebrow">
          <span class="w-2 h-2 rounded-full bg-green-500 hero-dot-pulse"></span>
          <span class="text-sm text-white/70">SEO técnico + datos + automatización. Sin humo.</span>
        </div>

        <h1 class="hero-animate-2 text-white mb-10 max-w-4xl">
          Consultor SEO Growth: Escala tu negocio <span class="hero-gradient-text">orgánicamente</span>
        </h1>

        <p class="hero-animate-3 text-lg md:text-xl text-white/50 mb-12 leading-relaxed max-w-2xl">
          Hago que tu negocio aparezca en Google y que ese tráfico se convierta en plata real. Posicionamiento orgánico, SEO técnico y automatización con Python. Si buscás un <a href="/consultor-seo-chile" class="text-[#0070F3] hover:text-[#3291FF] transition-colors">consultor SEO Chile</a>, estás en el lugar correcto.
        </p>

        <!-- CTAs -->
        <div class="hero-animate-4 flex flex-col sm:flex-row gap-4">
          <button
            data-open-contact
            class="inline-flex items-center justify-center gap-3 px-8 py-3.5 bg-white text-black font-medium rounded hover:bg-white/90 transition-all duration-200 cursor-pointer"
          >
            Agendar Diagnóstico Gratuito
          </button>
          <a
            href="#casos"
            class="hero-cta-secondary inline-flex items-center justify-center gap-3 px-8 py-3.5 border border-white/[0.2] text-white font-medium rounded hover:bg-white/[0.05] hover:border-white/[0.3] transition-all duration-200"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
            </svg>
            Ver Resultados Reales
          </a>
        </div>

      </div>
    </Container>
  </section>

  <!-- TRUST BAR -->
  <TrustBar client:load />

  <!-- PAIN POINTS -->
  <PainPoints client:load />

  <!-- CASO DE ÉXITO -->
  <section id="casos">
    <CaseStudyPreview client:load />
  </section>

  <!-- SERVICIOS -->
  <Services client:load />

  <!-- POR QUÉ YO -->
  <WhyMe client:load />

  <!-- PROCESO -->
  <WorkflowProcess client:load />

  <!-- ARTÍCULOS DESTACADOS -->
  <FeaturedArticles client:load />

  <!-- CALCULADORA -->
  <section id="calculadora" class="py-[120px] md:py-[160px]">
    <Container>
      <ProfitabilityCalculator client:load />
    </Container>
  </section>

  <!-- FAQ -->
  <HomeFAQ client:load />

  <!-- CTA FINAL -->
  <section id="contacto" class="py-[120px] md:py-[160px] border-t border-white/[0.08]">
    <Container>
      <div class="text-center max-w-3xl mx-auto">
        <h2 class="text-white mb-6">
          ¿Querés saber qué oportunidades tiene tu sitio?
        </h2>
        <p class="text-xl text-white/50 mb-10 leading-relaxed">
          En 30 minutos analizo tu situación actual y te muestro exactamente dónde estás dejando tráfico y plata sobre la mesa. Sin compromiso, sin humo.
        </p>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-10">
          <button
            data-open-contact
            class="inline-flex items-center justify-center gap-3 px-10 py-4 bg-white text-black font-medium rounded-lg hover:bg-white/90 transition-all duration-200 cursor-pointer text-lg"
          >
            Agendar Diagnóstico Gratuito
            <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </button>
          <a
            href="/quien-soy"
            class="inline-flex items-center justify-center gap-2 px-10 py-4 border border-white/[0.2] text-white font-medium rounded-lg hover:bg-white/[0.05] hover:border-white/[0.3] transition-all duration-200 text-lg"
          >
            Conocer más sobre mí
          </a>
        </div>

        <!-- Trust indicators -->
        <div class="flex flex-wrap justify-center gap-8 text-white/40 text-sm">
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-white/50" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
            </svg>
            Sin compromiso
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-white/50" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
            </svg>
            30 minutos
          </span>
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-white/50" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
            </svg>
            100% enfocado en tu negocio
          </span>
        </div>

        <!-- Inline form: baja fricción -->
        <div class="mt-6">
          <p class="text-white/30 text-sm mb-2">¿Preferís dejar tus datos directo?</p>
          <InlineContactForm client:load />
        </div>
      </div>
    </Container>
  </section>

  <Footer slot="footer" client:load />
</BaseLayout>
