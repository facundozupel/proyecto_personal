import BaseLayout from '../layouts/BaseLayout.astro';
import { Header } from '../components/layout/Header';
import { Footer } from '../components/layout/Footer';
import { Container } from '../components/ui';
import { StickyContact } from '../components/ui/StickyContact';

const title = "Consultor SEO Chile — Facundo Zupel | Posicionamiento Web";
const description = "Consultor SEO en Chile especializado en posicionamiento web con +5 años de experiencia. Estrategia data-driven, automatización con Python y resultados medibles. Caso Endado: +560K€ en orgánico.";

const servicios = [
  {
    titulo: "Auditoría SEO",
    descripcion: "Análisis completo de tu sitio: rastreo e indexación, velocidad de carga, Core Web Vitals, arquitectura de información, URLs duplicadas y errores técnicos que frenan tu posicionamiento orgánico.",
    link: "/auditoria-seo-chile"
  },
  {
    titulo: "SEO Técnico",
    descripcion: "Optimización técnica de tu sitio web: datos estructurados, robots.txt y sitemap.xml, rendimiento móvil, indexación y resolución de errores de rastreo para que Google entienda tu contenido.",
    link: "/seo-tecnico"
  },
  {
    titulo: "Estrategia SEO",
    descripcion: "Keyword research, mapeo de intención de búsqueda y planificación de contenido orientado a captar tráfico orgánico cualificado con potencial de conversión desde orgánico.",
    link: "/estrategia-seo"
  },
  {
    titulo: "SEO para Ecommerce",
    descripcion: "Indexación masiva de productos, optimización de fichas y categorías, schema Product y estrategias de posicionamiento para tiendas online con catálogos grandes.",
    link: "/seo-ecommerce"
  },
  {
    titulo: "SEO Local Chile",
    descripcion: "Posiciona tu negocio en Google Maps y el pack local. Optimización de Google Business Profile, gestión de reseñas y estrategia NAP para captar clientes en tu zona.",
