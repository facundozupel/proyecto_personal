---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Container } from '@/components/ui';
import { BlogCard } from '@/components/blog';
import { Header } from '@/components/layout/Header';
import { Footer } from '@/components/layout/Footer';
import { getCollection } from 'astro:content';

// Get all blog posts from content collections
const allPosts = await getCollection('blog');

// Filter out drafts and sort by date (most recent first)
const sortedPosts = allPosts
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .map((post) => ({
    ...post.data,
    slug: post.slug,
  }));
---

<BaseLayout
  title="Blog | Facundo Zupel - Organic Growth y Automatizaciones"
  description="Artículos sobre crecimiento orgánico, automatizaciones empresariales, SEO, análisis de datos y estrategias de marketing digital."
>
  <Header slot="header" client:load />
  <Footer slot="footer" client:load />

  <!-- Hero del Blog -->
  <section class="pt-32 pb-20 md:pb-28">
    <Container size="xl">
      <div class="text-center max-w-3xl mx-auto">
        <h1 class="text-white mb-4">Blog</h1>
        <p class="text-lg md:text-xl text-white/50 leading-relaxed">
          Aprende estrategias, técnicas y casos prácticos sobre <strong
            class="text-white">crecimiento orgánico</strong
          >, <strong class="text-white">automatizaciones</strong> y <strong
            class="text-white">análisis de datos</strong
          > para escalar tu negocio.
        </p>
      </div>
    </Container>
  </section>

  <!-- Grid de artículos -->
  <section class="py-20 md:py-28">
    <Container size="xl">
      {
        sortedPosts.length === 0 ? (
          <div class="text-center py-16">
            <p class="text-xl text-white/40">
              Próximamente publicaremos nuevos artículos.
            </p>
          </div>
        ) : (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {sortedPosts.map((post) => (
              <BlogCard post={post} client:load />
            ))}
          </div>
        )
      }
    </Container>
  </section>

  <!-- CTA final -->
  <section class="py-20 md:py-28">
    <Container size="lg">
      <div class="max-w-3xl mx-auto text-center card p-8 md:p-12">
        <h2 class="text-white mb-4">
          ¿Quieres recibir más contenido como este?
        </h2>
        <p class="text-lg text-white/50 mb-8">
          Suscríbete para recibir artículos sobre crecimiento orgánico y automatizaciones
          directamente en tu correo.
        </p>
        <button
          data-open-contact
          class="inline-block px-8 py-3.5 bg-[#0070F3] text-white font-medium rounded-lg hover:bg-[#005AC8] transition-all duration-200 cursor-pointer"
        >
          Contactar
        </button>
      </div>
    </Container>
  </section>
</BaseLayout>
