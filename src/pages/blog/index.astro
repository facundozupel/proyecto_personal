---
import { getCollection } from 'astro:content';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { Container, Section } from '@/components/ui';
import { BlogCard } from '@/components/blog';
import { Header } from '@/components/layout/Header';
import { Footer } from '@/components/layout/Footer';

// Obtener todos los posts publicados y ordenarlos por fecha
const allPosts = await getCollection('blog', ({ data }) => {
  return data.draft !== true;
});

const sortedPosts = allPosts.sort((a, b) => {
  return b.data.date.getTime() - a.data.date.getTime();
});
---

<BaseLayout
  title="Blog | Facundo Zupel - Organic Growth y Automatizaciones"
  description="Artículos sobre crecimiento orgánico, automatizaciones empresariales, SEO, análisis de datos y estrategias de marketing digital."
>
  <Header slot="header" client:load />
  <Footer slot="footer" client:load />
  {/* Hero del Blog */}
  <Section bg="white" class="py-12 md:py-16">
    <Container size="xl">
      <div class="text-center max-w-3xl mx-auto">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-neutral-900 mb-4"
        >
          Blog
        </h1>
        <p class="text-lg md:text-xl text-neutral-600 leading-relaxed">
          Aprende estrategias, técnicas y casos prácticos sobre <strong
            class="text-neutral-900">crecimiento orgánico</strong
          >, <strong class="text-neutral-900">automatizaciones</strong> y <strong
            class="text-neutral-900">análisis de datos</strong
          > para escalar tu negocio.
        </p>
      </div>
    </Container>
  </Section>

  {/* Grid de artículos */}
  <Section bg="gray">
    <Container size="xl">
      {
        sortedPosts.length === 0 ? (
          <div class="text-center py-16">
            <p class="text-xl text-neutral-600">
              Próximamente publicaremos nuevos artículos.
            </p>
          </div>
        ) : (
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {sortedPosts.map((post) => (
              <BlogCard post={post} client:load />
            ))}
          </div>
        )
      }
    </Container>
  </Section>

  {/* CTA final */}
  <Section bg="white">
    <Container size="lg">
      <div class="max-w-3xl mx-auto text-center py-12">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mb-4">
          ¿Quieres recibir más contenido como este?
        </h2>
        <p class="text-lg text-neutral-600 mb-8">
          Suscríbete para recibir artículos sobre crecimiento orgánico y automatizaciones
          directamente en tu correo.
        </p>
        <a
          href="#contacto"
          class="inline-block px-8 py-4 bg-accent-500 text-white font-semibold rounded-lg hover:bg-accent-600 hover:scale-105 transition-all shadow-md"
        >
          Contactar
        </a>
      </div>
    </Container>
  </Section>
</BaseLayout>
