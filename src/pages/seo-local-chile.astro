const vsTradicional = [
  {
    aspecto: "Objetivo",
    seoLocal: "Aparecer en búsquedas de tu zona geográfica",
    seoTradicional: "Aparecer en búsquedas a nivel nacional/global"
  },
  {
    aspecto: "Herramienta clave",
    seoLocal: "Google Business Profile",
    seoTradicional: "Sitio web optimizado"
