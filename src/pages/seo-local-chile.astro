const paraQuien = [
  {
    tipo: "Restaurantes y Cafeterías",
    descripcion: "Aparece cuando busquen 'restaurante cerca de mí' o 'café en [tu barrio]'. El 84% de los comensales busca restaurantes en Google antes de ir."
  },
  {
    tipo: "Clínicas y Consultas Médicas",
