const metodologia = [
  {
    paso: "01",
    titulo: "Auditoría Local",
    descripcion: "Analizo tu presencia local actual: Google Business Profile, citaciones, reseñas, competidores en tu zona y oportunidades de mejora."
  },
  {
    paso: "02",
    titulo: "Optimización GBP",
    descripcion: "Configuro y optimizo tu perfil de Google Business completamente: verificación, categorías, fotos, atributos, servicios y publicaciones."
  },
  {
    paso: "03",
    titulo: "Citaciones y NAP",
    descripcion: "Corrijo inconsistencias en citaciones existentes y creo nuevas en directorios relevantes para Chile y tu industria."
  },
  {
    paso: "04",
    titulo: "Estrategia de Reseñas",
    descripcion: "Implemento un sistema para obtener reseñas de forma ética y sostenible, más respuesta profesional a todas las reseñas."
  },
  {
    paso: "05",
    titulo: "Monitoreo Continuo",
    descripcion: "Seguimiento mensual de posiciones, métricas de GBP y ajustes según resultados. Reportes claros con métricas que importan."
  },
