const proceso = [
  {
    paso: "01",
    titulo: "Diagnóstico inicial",
    descripcion: "Auditoría completa de tu sitio para entender el punto de partida: problemas actuales, oportunidades y competidores. Este análisis define la estrategia."
  },
  {
    paso: "02",
    titulo: "Plan estratégico",
    descripcion: "Definimos objetivos realistas, keywords prioritarias y un roadmap de 6-12 meses con hitos medibles. Sabrás exactamente qué esperar."
  },
  {
    paso: "03",
    titulo: "Ejecución mensual",
    descripcion: "Cada mes implemento optimizaciones técnicas, mejoras de contenido y acciones específicas según el roadmap. Trabajo continuo, no puntual."
  },
  {
    paso: "04",
    titulo: "Medición y ajuste",
    descripcion: "Monitoreo resultados, analizo qué funciona y ajusto la estrategia según los datos. SEO es iterativo: optimizamos basados en evidencia."
  },
