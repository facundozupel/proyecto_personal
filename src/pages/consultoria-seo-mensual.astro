const diferenciadores = [
  {
    titulo: "Trabajo directo, sin intermediarios",
    descripcion: "Hablas conmigo, trabajo yo. No hay ejecutivos de cuenta ni juniors aprendiendo con tu proyecto. Experiencia directa en cada acción."
  },
  {
    titulo: "Enfoque en resultados de negocio",
