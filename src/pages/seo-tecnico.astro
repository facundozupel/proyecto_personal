const metodologia = [
  {
    paso: "01",
    titulo: "Crawl y Análisis",
    descripcion: "Rastreo completo de tu sitio con Screaming Frog y Sitebulb. Cruzo datos con Google Search Console para identificar cada error técnico y oportunidad de mejora."
  },
  {
    paso: "02",
    titulo: "Priorización",
    descripcion: "Clasifico los problemas por impacto en SEO y esfuerzo de implementación. Primero lo que más mueve la aguja: indexación, errores críticos, velocidad."
  },
  {
    paso: "03",
    titulo: "Implementación",
    descripcion: "Ejecuto las correcciones técnicas directamente o guío a tu equipo de desarrollo con especificaciones claras y validación de cada cambio."
