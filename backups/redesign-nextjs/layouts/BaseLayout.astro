---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const {
  title = 'Facundo Zupel | Consultor SEO, Organic Growth y Automatizaciones',
  description = 'Escala tu negocio sin depender de publicidad paga. Consultoría especializada en SEO, crecimiento orgánico y automatizaciones inteligentes.',
  image = '/og-image.jpg',
  canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url,
} = Astro.props;

const siteName = 'Facundo Zupel';
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google Ads (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=AW-17934520901"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'AW-17934520901');
    </script>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={Astro.site ? new URL(image, Astro.site).href : image} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="es_ES" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={Astro.site ? new URL(image, Astro.site).href : image} />

    <meta name="robots" content="index, follow" />
    <meta name="author" content="Facundo Zupel" />
    <meta name="theme-color" content="#000000" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

    <slot name="head" />
  </head>
  <body class="min-h-screen flex flex-col bg-black">
    <!-- No animated orbs, no particles, no grid overlay — pure black -->

    <!-- Subtle top gradient glow (Next.js pattern) -->
    <div class="pointer-events-none fixed top-0 left-0 right-0 h-[500px] z-0"
         style="background: radial-gradient(ellipse 80% 50% at 50% -20%, rgba(0, 112, 243, 0.12), transparent);">
    </div>

    <slot name="header" />

    <main class="flex-grow relative z-10">
      <slot />
    </main>

    <slot name="footer" />
  </body>
</html>
